{% extends "layout.njk" %}

{% block head %}
  <title>Foodfy - Gerenciador de Chefs</title>
{% endblock %}

{% block header %}
  <header class="header-manager">
    <div class="menu-manager">
      <div class="logo-manager">
        <a href="/foodfy/admin/receitas">
          <img src="/assets/logo-manager.png" alt="Logo foodfy">
        </a>
      </div>
      <div class="links-manager">
        <a href="/foodfy/admin/receitas">Receitas</a>
        <a href="/foodfy/admin/chefs">Chefs</a>
      </div>
    </div>
  </header>
{% endblock %}

{% block content %}

  <div class="chef-manager">
    <div class="title-button-manager">
      <h2>Gerenciar Chefs</h2>
      <a class="button" href="/foodfy/admin/chef/create ">Novo Chef</a>
    </div>

    <div class="cards-manager-chef">
      {% for chef in chefs %}
        <div class="card-manager-chef">
          <img src="{{chef.avatar_url}}" alt="{{chef.name}}">
          <div class="info-card-manager-chef">
            <span>{{chef.name}}</span>
            <a href="/foodfy/admin/chef/{{ chef.id }}">Visualizar</a>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>

{% endblock %}