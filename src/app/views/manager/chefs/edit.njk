{% extends "layout.njk" %}

{% block head %}
  <title>Editar Chef</title>
{% endblock %}

{% block header %}
  <header class="header-manager">
    <div class="menu-manager">
      <div class="logo-manager">
        <a href="/admin/receitas">
          <img src="/assets/logo-manager.png" alt="Logo foodfy">
        </a>
      </div>
      <div class="links-manager">
        <a href="/admin/receitas">Receitas</a>
        <a href="/admin/chefs">Chefs</a>
      </div>
    </div>
  </header>
{% endblock %}

{% block content %}
  <section class="details">

    <form method="POST" action="/admin/chefs?_method=PUT">

      <h3>Editando Chef</h3>

      <div class="item">
        <div>Avatar</div>
        <div>
          <input type="text" name="avatar_url" placeholder="http://" value="{{ recipe.image }}">
        </div>
      </div>

      <div class="item">
        <div>Nome</div>
        <div>
          <input type="text" name="name" value="{{ recipe.title }}">
        </div>
      </div>

      <input type="hidden" name="id" value="{{ recipe.id }}">

      <button class="edit" type="submit">Salvar Chef</button>
    </form>

    <form id="form-delete" method="POST" action="/admin/chefs?_method=DELETE">
      <input type="hidden" name="id" value="{{ recipe.id }}">

      <button class="edit" type="submit">Deletar</button>
    </form>

  </section>
{% endblock %}