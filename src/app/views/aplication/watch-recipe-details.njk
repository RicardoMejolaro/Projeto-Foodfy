{% extends "layout.njk" %}

{% block head %}
  <title>Foodfy -
    {{recipe.title}}</title>
{% endblock %}

{% block content %}
  <div class="recipe-page-details">
    <div class="recipe-details">
      <img src="{{recipe.image}}" alt="{{recipe.title}}">
      <div class="info-recipe-details">
        <span>{{recipe.title}}</span>
        <p>por {{recipe.chef_name}}</p>
      </div>
    </div>

    <div class="contents">
      <div class="head">
        <h2>Ingredientes</h2>
        <a id="ingredients">Esconder</a>
      </div>
      <div class="content-recipe-details" id="ingredients">
        <ul>
          {% for ingredient in recipe.ingredients %}
            <li>{{ingredient}}</li>
          {% endfor %}
        </ul>
      </div>
    </div>

    <div class="contents">
      <div class="head">
        <h2>Modo de preparo</h2>
        <a id="preparation">Esconder</a>
      </div>
      <div class="content-recipe-details" id="preparation">
        <ol>
          {% for preparation in recipe.preparation %}
            <li>{{preparation}}</li>
          {% endfor %}
        </ol>
      </div>
    </div>

    <div class="contents">
      <div class="head">
        <h2>Informações adicionais</h2>
        <a id="information">Esconder</a>
      </div>
      <div class="content-recipe-details" id="information">
        <p>{{ recipe.information }}</p>
      </div>
    </div>

  </div>

  <script src="/scripts/scripts.js"></script>

{% endblock %}