{% extends "layout.njk" %}

{% block head %}
  <title>Foodfy -
    {{recipe.title}}</title>
{% endblock %}

{% block header %}
  <header class="header-manager">
    <div class="menu-manager">
      <div class="logo-manager">
        <a href="/admin/receitas">
          <img src="/assets/logo-manager.png" alt="Logo foodfy">
        </a>
      </div>
    </div>
  </header>
{% endblock %}

{% block content %}
  <div class="title-button">
    <h2>Receita: {{recipe.title}}</h2>
    <a class="button" href="/receitas/{{ recipe.id }}/edit ">Editar Receita</a>
  </div>

  <div class="recipe-page-details">
    <div class="recipe-details">
      <img src="{{recipe.image}}" alt="{{recipe.title}}">
      <div class="info-recipe-details">
        <span>{{recipe.title}}</span>
        <p>{{recipe.author}}</p>
      </div>
    </div>

    <div class="contents">
      <div class="head">
        <h2>Ingredientes</h2>
        <a id="ingredients">Esconder</a>
      </div>
      <div class="content-recipe-details" id="ingredients">
        <ul>
          {% for ingredient in recipe.ingredients %}
            <li>{{ingredient}}</li>
          {% endfor %}
        </ul>
      </div>
    </div>

    <div class="contents">
      <div class="head">
        <h2>Modo de preparo</h2>
        <a id="preparation">Esconder</a>
      </div>
      <div class="content-recipe-details" id="preparation">
        {% for preparation in recipe.preparation %}
          <p class="no-margin">{{preparation}}</p>
        {% endfor %}
      </div>
    </div>

    <div class="contents">
      <div class="head">
        <h2>Informações adicionais</h2>
        <a id="information">Esconder</a>
      </div>
      <div class="content-recipe-details" id="information">
        {% for information in recipe.information %}
          <p>{{information}}</p>
        {% endfor %}
      </div>
    </div>

  </div>

  <script src="/scripts/scripts.js"></script>

{% endblock %}